<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_capture_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    >
    <!-- add by heml,for UI layout -->
    <RelativeLayout
        android:id="@+id/rl_switchCamera"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/iv_capturebg_height"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/capture_bottom"
        android:paddingRight="50dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="50dp"
            android:background="@drawable/selector_switchcamera"
            />
        <com.softwinner.camera.views.CircleRotateImageView
            android:id="@+id/iv_switchCamera"
            android:layout_width="@dimen/switchcamera_size"
            android:layout_height="@dimen/switchcamera_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="50dp"
            android:src="@mipmap/ic_switch_photo_facing_holo_light_xlarge" />
    </RelativeLayout>

    <!-- add by heml,for UI layout -->
    <RelativeLayout
        android:layout_width="@dimen/iv_capturebg_width"
        android:id="@+id/rl_capture"
        android:layout_height="@dimen/iv_capturebg_height"
        android:layout_marginBottom="@dimen/capture_bottom"
        android:layout_gravity="bottom|center"
        android:background="@drawable/selector_capture"
        >
        <com.softwinner.camera.views.CircleRotateImageView
            android:id="@+id/iv_rotateCapture"
            android:layout_width="@dimen/iv_capture_width"
            android:layout_height="@dimen/iv_capture_height"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_camera_normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rl_mask"
        android:layout_gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_capture_height"
        android:clickable="true"
        android:focusable="true"
        android:background="#00000000"
        android:visibility="gone" />

</FrameLayout>


