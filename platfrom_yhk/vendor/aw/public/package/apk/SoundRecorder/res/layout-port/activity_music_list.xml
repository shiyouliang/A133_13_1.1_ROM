<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar  
        android:id="@+id/toolbar"  
        android:layout_width="match_parent"  
        android:layout_height="?attr/actionBarSize"  
        android:background="#000000"
        android:layout_alignParentTop="true"
    	xmlns:app="http://schemas.android.com/apk/res-auto">  
        <LinearLayout
            android:id="@+id/toolbar_with_icon"  
            android:orientation="vertical"
            android:layout_width="match_parent"  
            android:layout_height="62dp">  
            <LinearLayout
                android:id="@+id/toolbar_icon_text"  			
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="5dp">  
            
                <ImageView  
                    android:id="@+id/toolbar_icon"  
                    android:layout_width="wrap_content"  
                    android:layout_height="wrap_content"				
                    android:src="@mipmap/ic_launcher_soundrecorder"  
                     />  
                <TextView  
                    android:id="@+id/toolbar_title"  
                    android:layout_width="wrap_content"  
                    android:layout_height="match_parent"  
                    android:textColor="#FFFFFF"  
                    android:textSize="20sp"
                    android:gravity="center"			
                    android:text="@string/list_of_recordings"/>  
            </LinearLayout>  
        </LinearLayout>       
    </androidx.appcompat.widget.Toolbar>
    <View  
        android:id="@+id/toolbar_divider"  
        android:layout_width="match_parent"  
        android:layout_height="1dp"			
        android:background="#0000FF"/>  
		
   <LinearLayout			
       android:layout_width="match_parent"  
       android:layout_height="match_parent"
       android:background="#ffffff"	   
       android:orientation="horizontal"
       android:gravity="center">  
       <TextView
           android:id="@+id/empty"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:textSize="30sp"
           android:textColor="#000000"
           android:layout_gravity="center_vertical|center"
           android:text="@string/not_found_recordings"
           android:visibility="gone" />
       
       <ListView
           android:id="@+id/music_list"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
       	   android:layout_gravity="center_vertical|center"
           android:visibility="gone"
           android:paddingBottom="0dp"
           android:divider="#EBEDE7"
           android:dividerHeight="1dp"
           android:footerDividersEnabled="true"
           android:headerDividersEnabled="false"/>
	</LinearLayout>    
</LinearLayout>